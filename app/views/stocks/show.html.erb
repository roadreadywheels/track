<h3><%= @stock.ticker %><span class="company_name"> - <%= @stock.company_name %></span></h3>
<p>Account: <span class="account_name"><%= @stock.account.account_name %></span></p>

<div class="container" style="margin-top: 30px">
  <div class="row">
    <div class="col-sm-6">
      <h4>News: </h4>

    </div>

    <div class="col-sm-6">
      <table class="table table-striped table-sm table-bordered">
        <tr>
          <th>Account Name: </th>
          <td style="color: green;"><%= @stock.account.account_name %></td>
        </tr>
        <tr>
          <th>Stock Price: </th>
          <td><%= number_to_currency(@stock.stock_price, :precision => 2) %></td>
        </tr>
        <tr>
          <th>Shares Owned: </th>
          <td><%= number_with_precision(@stock.shares, :precision => 0) %></td>
        </tr>
        <tr>
          <th>Current Maket Value: </th>
          <td><%= number_to_currency(@stock.stock_price * @stock.shares, :precision => 2) %></td>
        </tr>
        <tr>
          <th>Dividend Yield: </th>
          <td><%= number_to_percentage((@stock.dividend_yield * 100), :precision => 2) %></td>
        </tr>
        <tr>
          <th>Yearly Income: </th>
          <td><%= number_to_currency(@stock.yearly_income, :precision => 2) %></td>
        </tr>
        <tr>
          <th>Market Cap: </th>
          <td><%= number_to_human(@stock.market_cap) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

